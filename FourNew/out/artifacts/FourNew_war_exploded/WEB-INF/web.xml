<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>Login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomerServlet</servlet-name>
        <servlet-class>HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetStudentServlet</servlet-name>
        <servlet-class>ResetStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddStudentsServlet</servlet-name>
        <servlet-class>AddStudentsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteStudentsServlet</servlet-name>
        <servlet-class>DeleteStudentsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadUserHeadServlet</servlet-name>
        <servlet-class>UploadUserHeadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerSearchServlet</servlet-name>
        <servlet-class>ManagerSearchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomerServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddStudentsServlet</servlet-name>
        <url-pattern>/AddStudents</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteStudentsServlet</servlet-name>
        <url-pattern>/DeleteStudents</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetStudentServlet</servlet-name>
        <url-pattern>/ResetStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpeg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadUserHeadServlet</servlet-name>
        <url-pattern>/uploadUserHead</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerSearchServlet</servlet-name>
        <url-pattern>/ManagerSearch</url-pattern>
    </servlet-mapping>
</web-app>